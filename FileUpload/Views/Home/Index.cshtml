
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Index</title>
    <link href="~/src/css/layui.css" rel="stylesheet" />
    <script src="~/src/layui.js"></script>
</head>
<body>
    <div class="layui-upload-drag" id="uploadfile">
        <i class="layui-icon">&#xe67c;</i>
        <p>点击上传，或将文件拖拽到此处</p>
    </div>
    <div>
        <a href="/home/download">content</a>
    </div>
    <script>
        layui.config({
            debug: true
        });
        layui.use('upload', function () {
            var $ = layui.jquery, upload = layui.upload;


            upload.render({
                elem: '#uploadfile'
                , url: '/Home/Upload'
                , done: function (res) {
                    debugger;
                    console.log(res);
                }
                , error: function () {
                    debugger;
                }
            });

        });
    </script>
</body>
</html>
